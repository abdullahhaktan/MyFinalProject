<script>
    function searchMessages() {
        var input = document.getElementById("searchInput");
        var filter = input.value.toUpperCase();  // Girdiği değeri büyük harfe çevir
        var table = document.getElementById("messageTable");
        var rows = table.getElementsByTagName("tr");

        // Her satırı kontrol et
        for (var i = 0; i < rows.length; i++) {
            var cells = rows[i].getElementsByTagName("td");

            if (cells.length > 0) {
                var subjectCell = cells[3]; // Başlık hücresi
                var receiverCell = cells[2]; // Alıcı mail hücresi

                // Hücrelerde veri varsa, arama yap
                if (subjectCell && receiverCell) {
                    var subjectText = subjectCell.textContent || subjectCell.innerText;
                    var receiverText = receiverCell.textContent || receiverCell.innerText;

                    // Hem konu hem de alıcı mail üzerinde arama yap
                    if (subjectText.toUpperCase().includes(filter) || receiverText.toUpperCase().includes(filter)) {
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }
            }
        }
    }

</script>