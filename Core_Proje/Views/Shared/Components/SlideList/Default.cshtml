@using EntityLayer.Concrete
@model List<Portfolio>

@{
    var counter = 0;
    var counter1 = Model.Count;
    var deneme = 0;
}

<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="row"> <!-- İlk row başlangıcı -->

    @foreach (var item in Model)
    {
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> @item.Name projesine ait ekran görüntüleri </h4>
                    <div id="carousel-@item.PortfolioID" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (!string.IsNullOrEmpty(item.screenShotImageUrl))
                            {
                                <div class="carousel-item active">
                                    <img src="@Url.Content(item.screenShotImageUrl)" class="d-block w-100" alt="...">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.screenShotImageUrl1))
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(item.screenShotImageUrl1)" class="d-block w-100" alt="...">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.screenShotImageUrl2))
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(item.screenShotImageUrl2)" class="d-block w-100" alt="...">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@item.PortfolioID" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@item.PortfolioID" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>


                    <!-- Yeni Bilgi Alanları -->
                    <div class="mt-3">
                        <p><strong>Fiyat:</strong> @item.Price ₺</p>
                        <p><strong>Platform:</strong> @item.Platform</p>
                        <p><strong>Tamamlanma Oranı:</strong></p>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100">@item.Value%</div>
                        </div>
                    </div>
                    <!-- Bitiş -->

                </div>
            </div>
        </div>

        counter++;

        if (counter == 3)
        {
            @:</div> <!-- Mevcut row'u kapat -->
            if(Model.Count>3)
            {
                @:<div class="row"> <!-- Yeni row başlat -->
            }
            counter = 0;
            deneme = 1;
        }
    }

    @if(counter != 0)
    {
        @:</div>
    }

